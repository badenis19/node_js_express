{{!-- Will be rendered in the body of layouts/layout.hbs --}}
<h1>{{title}}</h1>
<p>Welcome to {{title}}</p>

{{!-- Helpers - one block for an if statement. Starts with # and ends with /  --}}
{{# if condition }}
    condition met
{{ else }}
    condition not met 
{{/if }}

{{!-- each loop  --}}
{{# each anyArray as |val key| }}
    {{ val }}
{{/each }}